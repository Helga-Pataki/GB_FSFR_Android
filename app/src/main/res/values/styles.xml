<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:backgroundDimAmount">@color/colorAqua</item>
    </style>

    <style name="ToolbarSearchView" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/CustomSearchView</item>
        <item name="android:editTextColor">@color/colorAqua</item>
        <item name="android:elevation">8dp</item>

    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchIcon">@drawable/ic_search_24dp</item>
        <item name="queryHint">@string/search_hint</item>


        <item name="android:cacheColorHint">@color/colorAqua</item>
        <item name="queryBackground">@drawable/search_bg</item>


        <item name="searchHintIcon">@null</item>

    </style>


    <style name="CheckboxStyle" parent="AppTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="FavouritesItem" parent="AppTheme">
        <item name="android:activatedBackgroundIndicator">@drawable/favourites_item_background</item>
    </style>

    <style name="SettingsAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="android:windowBackground">@color/colorSettingsAlertDimming</item>-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
