<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/number_of_chapter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_text"
        android:textColor="@color/colorWhite"
        android:gravity="center" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/number_of_chapter">

        <TextView
            android:id="@+id/chapter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorBlackText"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number_of_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chapter_name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTextNumberOfQuestions"
            android:textSize="12sp"
            android:lines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/i_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chapter_name"
            android:layout_marginStart="19dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/number_of_questions"
            android:textColor="@color/colorTextIknow"
            android:textSize="12sp"
            android:lines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/i_dont_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chapter_name"
            android:layout_marginStart="19dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/i_know"
            android:textColor="@color/colorTextIdontKnow"
            android:textSize="12sp"
            android:lines="1"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>