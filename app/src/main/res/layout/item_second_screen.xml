<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/chapter_name"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlackText"/>

    <TextView
        android:id="@+id/number_of_questions"
        android:layout_width="126dp"
        android:layout_height="15dp"
        android:layout_below="@+id/chapter_name"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextNumberOfQuestions"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/i_know"
        android:layout_width="126dp"
        android:layout_height="15dp"
        android:layout_below="@+id/chapter_name"
        android:layout_marginTop="5dp"
        android:layout_marginStart="19dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextIknow"
        android:layout_toEndOf="@+id/number_of_questions" />

    <TextView
        android:id="@+id/i_dont_know"
        android:layout_width="126dp"
        android:layout_height="15dp"
        android:layout_below="@+id/chapter_name"
        android:layout_marginTop="5dp"
        android:layout_marginStart="19dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextIdontKnow"
        android:layout_toEndOf="@+id/i_know"
        />

</RelativeLayout>